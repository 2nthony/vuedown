{
  "name": "vuedown",
  "description": "📝Use most Vue-component features in markdown files",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "evillt/vuedown"
  },
  "author": "evillt <ijoec123@gmail.com> (https://evila.me)",
  "main": "dist/index.js",
  "files": [
    "dist",
    "loader.js"
  ],
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "test": "npm run lint && ava --verbose",
    "lint": "xo"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^2.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "loader-utils": "^1.2.3",
    "prettier": "^1.17.0",
    "rollup": "^1.12.4",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-terser": "^5.0.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": false
    },
    "ignores": [
      "lib/markdown/marked.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
